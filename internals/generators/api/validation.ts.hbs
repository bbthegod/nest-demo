import { Joi } from 'express-validation';

export default {
  create: {
    body: Joi.object({
      title: Joi.string().required(),
      content: Joi.string().required(),
    }),
  },

  update: {
    body: Joi.object({
      title: Joi.string().required(),
      content: Joi.string().required(),
    }),
    params: Joi.object({
      Id: Joi.string().hex().required(),
    }),
  },
};
